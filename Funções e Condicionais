semana_dia = input("diga o dia da semana: ").lower()

def semana(semana_dia):
  if semana_dia == "segunda" or semana_dia ==  "terca" or semana_dia == "quarta"or semana_dia == "quinta"or semana_dia == "sexta" :
    return "Dia √ötil. üíº"
  elif  semana_dia == "sabado" or semana_dia == "domingo":
    return "Fim de Semana! üéâ"
  else:
    return "nao existe essa semana"

print(semana(semana_dia))

