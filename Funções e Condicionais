temperatura = float(input("entre com a temperatura do local: "))

def sugerir_roupa(temperatura):
  if temperatura >= 30:
    return "Muito calor! Use roupas leves"
  elif temperatura <= 18:
    return "Est√° frio. Vista um casaco! "
  else:
    return "Clima agrad√°vel. Uma camiseta e cal√ßa s√£o ideais"

print(sugerir_roupa(temperatura))

