  def identificar_veiculo(placa):
   placa = input("Digite a placa do ve√≠culo: ")
   inicial = placa[0].upper()

   if inicial in ['A', 'B', 'C']:
      print ("Carro de Passeio")
   elif inicial in ['M', 'N', 'O']:
      print ("Motocicleta")
   else:
      print ("Outro Tipo de Ve√≠culo")

identificar_veiculo("placa")
